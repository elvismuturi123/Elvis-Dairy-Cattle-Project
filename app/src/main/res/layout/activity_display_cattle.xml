<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details1"
    android:padding="15dp"
    android:background="@color/Dorminant_1"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/page_title"
        android:textSize="32sp"
        android:text="Display Cattle"
        android:textColor="@color/dwhite"
        android:textStyle="bold"/>
    <ImageButton
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/menu_btn"
        android:src="@drawable/menu"
        android:layout_alignParentEnd="true"
        app:tint="@color/dblue"
        android:background="@color/dwhite"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:layout_marginTop="60dp"
        />
    <androidx.appcompat.widget.AppCompatButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_cRecords"
            android:layout_marginTop="500dp"
            android:layout_gravity="center_horizontal"
            android:text="Add"
            android:layout_centerHorizontal="true"
            android:textColor="@color/dwhite"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="false"
            android:background="@drawable/style_custombtn1"
            />
</RelativeLayout>